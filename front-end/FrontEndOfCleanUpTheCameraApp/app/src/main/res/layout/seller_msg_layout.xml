<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.front_end_of_clean_up_the_camera_app.Seller_Msg_Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/seller_msg_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/seller_msg_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginEnd="48dp"
            app:expandedTitleMarginStart="48dp"
            app:contentScrim="@color/deepGrey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/seller_msg_toolbar"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/seller_msg_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

            <android.widget.ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                android:background="@drawable/manage_filled"
                app:layout_collapseMode="parallax"/>

            <android.widget.TextView
                android:id="@+id/seller_msg_sellerName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                android:layout_marginLeft="120dp"
                android:textSize="@dimen/seller_item_title_size"
                android:text="CUTM广州分部"
                android:textColor="@color/colorBlack"
                android:maxLines="1"
                />

            <android.widget.TextView
                android:id="@+id/seller_msg_sellerAddress_textView"
                android:layout_width="@dimen/seller_item_subTitle_width"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="110dp"
                android:textSize="@dimen/seller_item_subTitle_size"
                android:text="广州市天河区天河路"
                android:textColor="@color/colorBlack"
                />
            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:text="店铺状态:"/>

            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="150dp"
                android:textSize="20dp"
                android:text="营业中"
                android:textStyle="bold"
                android:textColor="@color/deepOrange"/>

            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:text="服务评分:"/>

            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="150dp"
                android:textSize="20dp"
                android:text="4.9"
                android:textStyle="bold"
                android:textColor="@color/deepOrange"/>

            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="210dp"
                android:textSize="20dp"
                android:text="服务价格:"/>

            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="150dp"
                android:textSize="20dp"
                android:text="￥20.00"
                android:textStyle="bold"
                android:textColor="@color/deepOrange"/>

            <android.widget.Button
                android:id="@+id/seller_msg_makeChat_button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="260dp"
                android:textSize="20dp"
                android:text="咨询"/>

            <android.widget.Button
                android:id="@+id/seller_msg_makeOrder_button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="260dp"
                android:textSize="20dp"
                android:text="下单"
                />


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/seller_msg_discuss"/>

</android.support.design.widget.CoordinatorLayout>
