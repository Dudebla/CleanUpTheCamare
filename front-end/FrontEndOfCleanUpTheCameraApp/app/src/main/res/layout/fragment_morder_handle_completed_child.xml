<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_border_edittext_layout"
    android:layout_marginBottom="@dimen/mechant_order_handle_completed_marginBottom"
    android:layout_marginHorizontal="@dimen/mechant_order_handle_completed_marginHorizontal"
    android:layout_marginVertical="@dimen/mechant_order_handle_completed_marginVertical"
    tools:context="com.example.front_end_of_clean_up_the_camera_app.MechantFragment.MOHCompletedFragment">


    <RelativeLayout
        android:id="@+id/rl_orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mechant_order_handle_pending_marginTop"
        >

        <TextView
            android:id="@+id/tv_orderNumberLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mechant_order_handle_pending_marginHorizontal"
            android:text="订单编号:"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/tv_orderNumberLable"
            />

    </RelativeLayout>

    <View
        android:id="@+id/v_dividerOne"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_orderTime"
        android:layout_marginBottom="5dip"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:background="@color/colorBlack"  />


    <RelativeLayout
        android:id="@+id/rl_orderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/mechant_order_inqury_marginRight"
        android:layout_marginEnd="@dimen/seller_item_right_widget_marginRight"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/tv_orderTimeLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
            android:layout_marginVertical="@dimen/mechant_order_handle_going_marginVertical"
            android:text="订单日期:"
            android:textSize="10dp"
            android:textColor="@color/deepGrey"/>

        <TextView
            android:id="@+id/tv_orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:textSize="10dp"
            android:textColor="@color/deepGrey"
            android:layout_toRightOf="@+id/tv_orderTimeLable"
            android:layout_marginVertical="@dimen/mechant_order_handle_going_marginVertical"
            />



    </RelativeLayout>



    <View
        android:id="@+id/v_dividerTwo"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_orderTime"
        android:layout_marginBottom="5dip"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:background="@color/colorBlack"  />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iv_userImage"
        android:layout_below="@+id/v_dividerOne"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:layout_marginTop="@dimen/mechant_order_handle_completed_marginTop"
        android:textSize="15dp"
        android:text="用户名"/>

    <ImageView
        android:id="@+id/iv_userPhoneImage"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:src="@drawable/phone"
        android:layout_below="@+id/tv_username"
        android:layout_toRightOf="@+id/iv_userImage"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:layout_marginTop="10dip"
        />

    <TextView
        android:id="@+id/tv_userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:layout_toRightOf="@+id/iv_userPhoneImage"
        android:layout_marginTop="@dimen/mechant_order_handle_going_marginTop"
        android:text="11111111"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        />

    <ImageView
        android:id="@+id/iv_mechantChat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/chat"
        android:layout_toRightOf="@id/tv_userPhone"
        android:layout_below="@id/tv_username"
        android:layout_marginRight="@dimen/mechant_order_handle_going_marginRight"
        android:scaleType="fitEnd"
        android:layout_alignParentRight="true"
        />


    <RelativeLayout
        android:id="@+id/rl_userRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_userPhone"
        android:layout_marginVertical="@dimen/mechant_order_handle_going_marginVertical"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        >


    </RelativeLayout>

    <View
        android:id="@+id/v_dividerThree"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_userRemarks"
        android:layout_marginBottom="5dip"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:background="@color/colorBlack"  />

    <RelativeLayout
        android:id="@+id/rl_estimatedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_dividerThree">

        <TextView
            android:id="@+id/tv_incomeMoneyLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="交易金额："
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:layout_marginHorizontal="@dimen/mechant_order_handle_completed_marginHorizontal"
            android:layout_marginVertical="@dimen/mechant_order_handle_completed_marginVertical"
            />

        <TextView
            android:id="@+id/tv_incomeMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="22￥"
            android:textSize="15dp"
            android:textColor="@color/deepOrange"
            android:layout_toRightOf="@+id/tv_incomeMoneyLable"
            android:layout_marginVertical="@dimen/mechant_order_handle_going_marginVertical"/>


    </RelativeLayout>



</RelativeLayout>
