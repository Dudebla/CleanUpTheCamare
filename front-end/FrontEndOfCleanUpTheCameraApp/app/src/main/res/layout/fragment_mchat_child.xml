<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_mChat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_mChatChildContent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_mChatImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/mechant_order_chat_recyclerView_margin"
            android:src="@drawable/user_image"/>

        <TextView
            android:id="@+id/tv_mChatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="15dp"
            android:layout_marginTop="@dimen/mechant_order_chat_recyclerView_marginTop"
            android:layout_toRightOf="@+id/iv_mChatImage"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/tv_mChatLatestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好你好"
            android:textSize="10dp"
            android:layout_below="@+id/tv_mChatName"
            android:layout_toRightOf="@+id/iv_mChatImage"
            android:layout_marginVertical="@dimen/mechant_order_chat_recyclerView_marginVertical"/>


        <TextView
            android:id="@+id/tv_mChatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/4/26"
            android:textSize="10dp"
            android:layout_marginTop="@dimen/mechant_order_chat_recyclerView_marginTop"
            android:layout_marginRight="@dimen/mechant_order_chat_recyclerView_marginRight"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_mChatChildContent"
        android:background="@color/lightGrey"
        />
</RelativeLayout>
