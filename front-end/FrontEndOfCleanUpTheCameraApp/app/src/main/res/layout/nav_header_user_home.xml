<?xml version="1.0" encoding="utf-8"?>
<!--user header of drawerLayout-->
<!--nav_userHead_imageView: imageView of user, disable now-->
<!--nav_userName_textView: username of user, disable now-->
<!--nav_userLocation_textView: show user location-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!--user image-->
    <ImageView
        android:id="@+id/nav_userHead_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/user_image"
        />

    <TextView
        android:id="@+id/nav_userName_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/nav_userHead_imageView"
        android:textSize="30dp"
        android:text="李小明"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/nav_userLocation_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/nav_userHead_imageView"
        android:layout_below="@+id/nav_userName_textView"
        android:textSize="15dp"
        android:text="广州市天河区" />

</RelativeLayout>
