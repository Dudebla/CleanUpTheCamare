<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_border_edittext_layout"
    android:layout_marginBottom="@dimen/mechant_order_handle_cancle_marginBottom"
    android:layout_marginHorizontal="@dimen/mechant_order_handle_cancle_marginHorizontal"
    android:layout_marginVertical="@dimen/mechant_order_handle_cancle_marginVertical"
    tools:context="com.example.front_end_of_clean_up_the_camera_app.MechantFragment.MOHCanceledFragment">

    <View
        android:id="@+id/v_dividerOne"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_orderTime"
        android:layout_marginBottom="5dip"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_cancle_marginHorizontal"
        android:background="@color/colorBlack"  />


    <RelativeLayout
        android:id="@+id/rl_orderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_orderTimeLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mechant_order_handle_cancle_marginHorizontal"
            android:layout_marginVertical="@dimen/mechant_order_handle_cancle_marginVertical"
            android:text="订单日期:"
            android:textSize="10dp"
            android:textColor="@color/deepGrey"/>

        <TextView
            android:id="@+id/tv_orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年4月25日"
            android:textColor="@color/deepGrey"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/tv_orderTimeLable"
            android:layout_marginVertical="@dimen/mechant_order_handle_cancle_marginVertical"
            />



    </RelativeLayout>






    <View
        android:id="@+id/v_dividerTwo"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_orderTime"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:background="@color/colorBlack"  />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iv_userImage"
        android:layout_below="@+id/v_dividerOne"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        android:layout_marginVertical="@dimen/mechant_order_handle_going_marginVertical"
        android:textSize="15dp"
        android:text="用户名"/>

    <ImageView
        android:id="@+id/iv_userPhoneImage"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:src="@drawable/phone"
        android:layout_below="@+id/tv_username"
        android:layout_toRightOf="@+id/iv_userImage"
        android:layout_marginBottom="@dimen/mechant_order_handle_cancle_marginBottom"
        android:layout_marginHorizontal="@dimen/mechant_order_handle_going_marginHorizontal"
        />

    <TextView
        android:id="@+id/tv_userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:layout_toRightOf="@+id/iv_userPhoneImage"
        android:layout_marginBottom="@dimen/mechant_order_handle_cancle_marginBottom"
        android:text="11111111"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        />



</RelativeLayout>
